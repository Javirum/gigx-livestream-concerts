<section id="add-listing" class="center">
  <h1>Add a listing</h1>
  <form action="/listings/add" method="POST">
    <div>
      <input type="text" name="title" id="title" placeholder="Concert Title">
    </div>
    <div>
      <input type="text" name="url" id="url" placeholder="Video URL">
    </div>
    <div>
      <input type="text" name="image" id="image-url" placeholder="Image URL">
    </div>
    <div>
      <input type="text" name="artist" id="artist" placeholder="Artist Name">
    </div>
    <div>
      <input type="number" name="year" id="year" placeholder="Year">
    </div>
    <div>
      <input type="number" name="duration" id="duration" placeholder="Duration (minutes)">
    </div>
    <div>
      <input type="text" name="location" id="location" placeholder="Location">
    </div>
    <div>
      <label>Genres</label>
      <div>
        <label for="classical">Classical</label>
        <input type="checkbox" name="genre_list[]" value="Classical" id="classical">
      </div>
      <div>
        <label for="blues">Blues</label>
        <input type="checkbox" name="genre_list[]" value="Blues" id="blues">
      </div>
      <div>
        <label for="rock">Rock</label>
        <input type="checkbox" name="genre_list[]" value="Rock" id="rock">
      </div>
      <div>
        <label for="pop">Pop</label>
        <input type="checkbox" name="genre_list[]" value="Pop" id="pop">
      </div>
      <div>
        <label for="hip-hop">Hip-hop</label>
        <input type="checkbox" name="genre_list[]" value="Hip-hop" id="hip-hop">
      </div>
      <div>
        <label for="reggae">Reggae</label>
        <input type="checkbox" name="genre_list[]" value="Reggae" id="reggae">
      </div>
      <div>
        <label for="jazz">Jazz</label>
        <input type="checkbox" name="genre_list[]" value="Jazz" id="jazz">
      </div>
      <div>
        <label for="country">Country</label>
        <input type="checkbox" name="genre_list[]" value="Country" id="country">
      </div>
      <div>
        <label for="world">World</label>
        <input type="checkbox" name="genre_list[]" value="World" id="world">
      </div>
      <div>
        <label for="electronic">Electronic</label>
        <input type="checkbox" name="genre_list[]" value="Electronic" id="electronic">
      </div>
      <div>
        <label for="metal">Metal</label>
        <input type="checkbox" name="genre_list[]" value="Metal" id="metal">
      </div>
      <div>
        <label for="indie">Indie</label>
        <input type="checkbox" name="genre_list[]" value="Indie" id="indie">
      </div>
      <div>
        <label for="r-and-b">R&B</label>
        <input type="checkbox" name="genre_list[]" value="R&B" id="r-and-b">
      </div>
      <div>
        <label for="latin">Latin</label>
        <input type="checkbox" name="genre_list[]" value="Latin" id="latin">
      </div>
    </div>
    <div>
      <button class="btn-form">Submit</button>
    </div>
  </form>

  {{#if messages.length}}
  <p>
    <ul>
      {{#each messages}}
      <li>{{this}}</li>
      {{/each}}

    </ul>
  </p>
  {{/if}}
</section>