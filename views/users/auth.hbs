<div class="container center">
<section class="auth-form center">
<h1>Sign Up</h1>
<form action="/users/auth/signup" method="POST">
  <div>
    <input type="text" name="email" id="signup-email" placeholder="Email">
  </div>
  <div>
    <input type="password" name="password" id="signup-password" placeholder="Password">
  </div>

  <div>
    <button class="btn-form">Sign up</button>
  </div>
</form>

{{#if messages.length}}
<p>
  <ul>
    {{#each messages}}
    <li>{{this}}</li>
    {{/each}}

  </ul>
</p>
{{/if}}
</section>

<hr>
<section class="auth-form center">
<h1>Login</h1>
<form action="/users/auth/login" method="POST">
  <div>
    <input type="text" name="email" id="login-email" placeholder="Email">
  </div>
  <div>
    <input type="password" name="password" id="login-password" placeholder="Password">
  </div>

  <div>
    <button class="btn-form">Login</button>
  </div>
</form>

{{#if messages.length}}
<p>
  <ul>
    {{#each messages}}
    <li>{{this}}</li>
    {{/each}}

  </ul>
</p>
{{/if}}
</section>
</div>